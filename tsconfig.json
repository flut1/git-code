    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
